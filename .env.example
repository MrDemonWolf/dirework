# Database
DATABASE_URL="postgresql://dirework:password@localhost:5432/dirework"

# Authentication (min 32 chars — generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=""

# Public URL of your Dirework instance
BETTER_AUTH_URL="http://localhost:3001"

# CORS allowed origin (usually same as BETTER_AUTH_URL)
CORS_ORIGIN="http://localhost:3001"

# Twitch OAuth — register at https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=""
TWITCH_CLIENT_SECRET=""

# Comma-separated Twitch user IDs allowed to log in (empty = allow all)
ALLOWED_TWITCH_IDS=""

# Legal page URLs (set to show links in footer, leave empty to hide)
# PRIVACY_POLICY_URL="https://example.com/privacy"
# TERMS_OF_SERVICE_URL="https://example.com/terms"

# Environment
NODE_ENV="development"

# Set to "true" during CI/build to skip env validation
# SKIP_ENV_VALIDATION="true"
